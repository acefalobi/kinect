<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_splash_screen"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kinectafrica.android.activity.SplashScreenActivity">
    <ImageView
        android:id="@+id/splash_bg"
        android:src="@mipmap/kinect_bg"
        android:scaleType="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ImageView
        android:id="@+id/splash_image"
        android:layout_marginStart="104dp"
        android:layout_marginEnd="104dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@mipmap/kinect_inverse"
        android:layout_centerInParent="true"
        android:contentDescription="@string/text_splash_image"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="100dp" />
    <ImageView
        android:id="@+id/splash_logo"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="100dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_above="@id/splash_image"
        android:src="@mipmap/kinect_logo_arrow"
        android:contentDescription="@string/text_splash_image" />
</RelativeLayout>
