<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_timestamp"
        android:visibility="gone"
        app:cardElevation="1dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">
        <TextView
            android:id="@+id/text_timestamp"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/white"
            android:padding="10dp"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/layout_message_sender"
        android:visibility="gone"
        android:orientation="vertical" android:layout_width="wrap_content"
        android:layout_gravity="end"
        android:layout_marginStart="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp">
        <TextView
            android:id="@+id/text_message_content_sender"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:background="@drawable/bg_message_primary"
            android:textColor="@color/white"
            android:textIsSelectable="true"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/text_message_time_sender"
            android:visibility="gone"
            android:layout_marginEnd="2dp"
            android:layout_gravity="end"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_message_receiver"
        android:visibility="gone"
        android:orientation="vertical" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp">
        <TextView
            android:id="@+id/text_message_content_receiver"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:background="@drawable/bg_message_grey"
            android:textIsSelectable="true"
            android:textColor="#444"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/text_message_time_receiver"
            android:visibility="gone"
            android:layout_marginStart="2dp"
            android:layout_gravity="start"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp" />
    </LinearLayout>
</LinearLayout>